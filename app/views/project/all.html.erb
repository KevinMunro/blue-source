<h1>Projects</h1>
<section ng-app="project_list_app">
<%= text_field_tag :query, nil, class: "form-control", placeholder: "Search here...", 'ng-model' => "query" %>
<div class="pull-right">
	<%= link_to 'Add', :project_add, class: "btn btn-link"%>
</div>
<div class="table-responsive" ng-controller="project_list_ctrl">
	<table class="table table-bordered table-condensed" cellspacing="10">
		<tr>
			<th><%= link_to "Project Name", "#", 'ng-click' => "predicate='name'; reverse=!reverse" %></th>
			<th><%= link_to "Team Lead", "#", 'ng-click' => "predicate='lead.last_name'; reverse!=reverse "%></th>
			<th><%= link_to "Status", "#" %></th>
		</tr>
		<tr ng-repeat="project in projects | filter:query | orderBy:predicate:reverse ">
			<td><%= link_to '{{project.name}}', "project/{{project.id}}"%></td>
			<td><%= link_to '{{project.lead.display_name}}', "employee/{{project.lead.id}}"%></td>
			<td>{{project.status}}</td>
		</tr>
	</table>
</div>
</section>