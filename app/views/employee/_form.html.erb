<%= form_for @employee, html: {class: "form-horizontal", role: "form"} do |f| %>
<div class="form-group">
	<%= f.label :first_name, nil, class: "control-label" %>
	<%= text_field_tag "employee[first_name]", @employee.first_name.capitalize, type: :text, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :last_name, nil, class: "control-label" %>
	<%= text_field_tag "employee[last_name]", @employee.last_name.capitalize, type: :text, class: "form-control" %>
</div>
<% if current_user.is_upper_management? %>
<div class="form-group">
	<%= f.label :role, nil, class: "control-label" %>
	<%= f.select :role, Employee.roles, {}, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :level, nil, class: "control-label" %>
	<%= f.text_field :level, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :manager, nil, class: "control-label" %>
	<%= select :employee, :manager_id, Employee.all.find_all {|f| f.is_manager_or_higher? }.collect {|f| [f.display_name, f.id]}, { include_blank: true }, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :status, nil, class: "control-label" %>
	<%= f.select :status, Employee.statuses, {}, class: "form-control" %>
</div>
<% end %>
<div class="form-group">
	<%= f.label :start_date, nil, class: "control-label" %>
	<%= f.date_field :start_date, max: Time.now, class: "form-control", placeholder: "YYYY-MM-DD", pattern: '\d{4}-\d{2}-\d{2}', title: "YYYY-MM-DD" %>
</div>
<div class="form-group">
	<%= f.label :phone_number, nil, class: "control-label" %>
	<%= f.phone_field :phone_number, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :extension, nil, class: "control-label" %>
	<%= f.number_field :extension, min: 1000, max: 9999, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :im_name, "IM Name", class: "control-label" %>
	<%= f.text_field :im_name, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :im_client, "IM Client", class: "control-label" %>
	<%= f.select :im_client, Employee.im_client_types, {include_blank: true}, class: "form-control" %>
</div>
<div class="form-group">
	<%= button_tag "Close", type: "button", class: "btn btn-default", data: {dismiss: "modal"} if @in_modal %>
	<%= f.submit class: "btn btn-primary"%>
</div>
<% end %>
