<% if flash[:notice] or flash[:error] %>
<div class="alert <%= flash[:notice].blank? ? "alert-danger" : "alert-success" %> alert-dismissable">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">
		&times;
	</button>
	<% [flash[:notice],flash[:error]].each do |flash_msg| %>
		<% if flash_msg.kind_of?(Array) %>
			<%= "The following [#{flash_msg.count}] errors occured:" %>
		    <ul>
			<% flash_msg.each do |msg| %>
			<li>
			<%= msg %>
			</li>
			<% end %>
			</ul>
		<% else %>
			<%= flash_msg %>
		<% end %>
	<% end %>
</div>
<% end %>